extends layout

block content
  .d-flex.justify-content-between.align-items-center.mb-3
    h1.mb-0 My Library
    button.btn.btn-primary(type="button") + Add item

  .row.mb-3
    .col-md-8
      input.form-control(type="text" placeholder="Search by artist, album or track (mock)")
    .col-md-4
      select.form-select
        option(value="all" selected) All
        option(value="track") Tracks
        option(value="album") Albums
        option(value="artist") Artists
  .row
    each it in items
      .col-md-6.col-lg-4
        .card
          .card-body
            h5.card-title= it.title
            h6.card-subtitle.mb-2.text-muted #{it.artist} — #{it.type.charAt(0).toUpperCase()+it.type.slice(1)}#{it.year ? ' ('+it.year+')' : ''}
            p.card-text Rating: #{'★'.repeat(it.rating)}#{'☆'.repeat(5-it.rating)}
            if it.note
              p.card-text Note: #{it.note}
            a.card-link(href="#") Edit
            a.card-link(href="#") Delete

