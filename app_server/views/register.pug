extends layout

block content
  h1.mb-4 Register
  .row
    .col-md-6
      form
        .mb-3
          label.form-label(for="name") Name
          input#name.form-control(type="text" placeholder="Your name")
        .mb-3
          label.form-label(for="phone") Phone
          input#phone.form-control(type="tel" placeholder="+353 ...")
        .mb-3
          label.form-label(for="address") Address
          input#address.form-control(type="text" placeholder="Street, City")
        .mb-3
          label.form-label(for="email") Email
          input#email.form-control(type="email" placeholder="you@example.com")
        .mb-3
          label.form-label(for="password") Password
          input#password.form-control(type="password")
        .mb-3
          label.form-label(for="confirm") Confirm password
          input#confirm.form-control(type="password")
        button.btn.btn-primary(type="button") Create account
