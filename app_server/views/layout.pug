doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= title
    // Bootstrap 5 (CDN)
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    style.
      html, body {
        height: 100%;
        margin: 0;
      }
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      main {
        flex: 1;
      }
      .brand { font-weight: 700; }
      .card { margin-bottom: 16px; }
      footer {
        background: #222;
        color: #aaa;
        padding: 1rem;
        text-align: center;
        margin-top: auto;
      }
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand.brand(href="/") TrackNest
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#nav")
          span.navbar-toggler-icon
        #nav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/library") Library
            if currentUser 
              li.nav-item
                span.nav-link(style="cursor: default; color: #ccc;") 
                  | Hello, &nbsp;
                  = currentUser.name || currentUser.email
              li.nav-item 
                a.nav-link(href="/logout" style="font-weight:600; color:#ff7373;") Logout
            else 
              li.nav-item 
                a.nav-link(href="/login") Login
              li.nav-item
                a.nav-link(href="/register") Register
            

    main.container.mt-4
      block content

    footer
      | Â© 2025 TrackNest. All rights reserved.

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    block scripts

