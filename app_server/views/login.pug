extends layout

block content
  h1.mb-4 Login

  if error
    .alert.alert-danger= error
  .row
    .col-md-4
      form(method="POST" action="/login")
        .mb-3
          label.form-label(for="email") Email
          input#email.form-control(type="email" name="email" placeholder="you@example.com" required)
        .mb-3
          label.form-label(for="password") Password
          input#password.form-control(type="password" name="password" required)
        .d-flex.gap-2
          button.btn.btn-success(type="submit") Sign in
          a.btn.btn-link(href="/register") Create account
